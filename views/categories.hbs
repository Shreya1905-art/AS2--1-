<h2>Categories
    <a href="/categories/add" class="btn btn-success float-end">Add Category</a>
</h2>
<hr />

{{#if message}}
    <div class="alert alert-{{#if success}}success{{else}}danger{{/if}}">
        {{message}}
    </div>
{{/if}}

{{#if categories.length}}
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>Category Name</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td>{{category}}</td>
                <td class="text-end">
                    <a href="/categories/delete/{{id}}" class="btn btn-danger btn-sm" 
                       onclick="return confirm('Are you sure you want to delete this category?')">
                        <i class="bi bi-trash"></i> Remove
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
    <div class="alert alert-warning">
        {{#if message}}
            {{message}}
        {{else}}
            No categories found. <a href="/categories/add" class="alert-link">Add a category</a> to get started.
        {{/if}}
    </div>
{{/if}}